{
  "compilerOptions": {
    "target": "ES2020",                // Modern JS output
    "module": "CommonJS",              // Node.js uses CommonJS
    "rootDir": "src",                  // Your source code folder
    "outDir": "dist",                  // Compiled JS output folder
    "strict": true,                    // Enable all strict type checks
    "esModuleInterop": true,           // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true               // Skip type checking of declaration files
  },
  "include": ["src"],                  // Compile everything inside src/
  "exclude": ["node_modules", "dist"]  // Ignore these folders
}
